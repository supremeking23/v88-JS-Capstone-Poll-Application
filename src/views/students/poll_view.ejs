<%- include('../includes/head')%>
	<body>
		<%- include('../includes/nav')%>
       

		<div class="mt-2 container">
			<!-- Page Layout here -->
            <%- include('../includes/modal')%>

            <div class="row mt-2">
                <div class="col s12">
                    <div class="card p-2">
                        <h3><%= question %></h3>
                        <form action="/submit_response_process_json" method="POST">
                            <div class="row">
                                <div class="col s12">
                                    <%for(let choice in choice_list){ %>
                                        <p>
                                            <label >
                                                <input class="with-gap" name="choice" type="radio" value="<%= choice_list[choice].choice %>"  />
                                                <span><%= choice_list[choice].choice %></span>
                                            </label>
                                        </p>
                                    <% } %>

                                    <!-- <p>
                                        <label>
                                            <input class="with-gap" name="group1" type="radio"  />
                                            <span>Green</span>
                                        </label>
                                    </p> -->
                                     
                                </div>
                              
                            </div>
                            <button type="submit" class="btn button-primary"><i class="material-icons right">send</i>Submit</button>

                            
                        </form>
                    </div>
                </div>
            </div>


          
		
		</div>

		<script>
           $(document).ready(function(){
               const socket = io();
               console.log("student enter the poll");
               socket.emit("student-enter-the-poll",{message:"student enter the poll"});


               $("form").submit(function(){
                   $.post($(this).attr("action"),$(this).serialize(),function(response){
                      
                       M.toast({ html: response.message ,classes: `button-primary`});
                   },"json");

                   socket.emit("send-poll-answer",{message:"send-poll-answer"});
                   
                    // alert("hi");
                    setTimeout(()=>{
                        // Simulate an HTTP redirect:
                        window.location.replace("https://413eb019ae5b.ngrok.io/student_response_view");
                    },3000);
                    return false;
                   
               });


               $(".redirect-to-index").click(function(){
                    setTimeout(()=>{
                        // Simulate an HTTP redirect:
                        window.location.replace("https://413eb019ae5b.ngrok.io/");
                    },200);
                  
                    
                    return false;
               })

                // $(".test").click(function(){
                //     socket.emit("send-poll-answer",{message:"send-poll-answer"});
                // });
           })
        </script>

